# exploratory_data_analysis.ipynb

import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Load data
df = pd.read_csv("../data/sample_data.csv", encoding="latin-1")
df = df.dropna()

# Overview
df.head()
df.info()
df.describe()

# Churn distribution
sns.countplot(x='Churn status', data=df)
plt.title("Churn Distribution")
plt.show()

# Correlation heatmap
plt.figure(figsize=(10,8))
sns.heatmap(df.corr(), annot=True, cmap="coolwarm")
plt.title("Feature Correlations")
plt.show()

#We check the distribution of churn to see class balance.
#Correlation heatmap shows which features affect churn and usage.
